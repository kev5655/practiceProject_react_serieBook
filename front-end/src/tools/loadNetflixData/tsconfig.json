{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ES2015",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "Node",
  },
  "exclude": [
    "source",
    "./node_modules",
    "bower_components",
    "dist"
  ]
}